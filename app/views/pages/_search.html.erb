
<div class="container">
<div class="search">
    <%= simple_form_for :search, url: cars_path, method: :get, html: { class: "fomrme", id: "search-form", onsubmit: "return validateForm();" } do |f| %>
  <div class="row lasearch">
    <div class="col-md-3">
      <%= f.input :city, label: "City", collection: Car.pluck(:city).uniq, input_html: { id: "city-input", class: "form-control" }, name: 'search[city]' %>
    </div>
    <div class="col-md-3">
  <%= f.input :model, collection: Car.pluck(:model).uniq, label: "Model", input_html: { id: "model-input", class: "form-control select" } %>
</div>
    <div class="col-md-3">
      <%= f.input :brand, collection: Car.pluck(:brand).uniq, label: "Brand", input_html: { id: "brand-input", class: "form-control select" } %>
    </div>
    <div class="col-md-3">
      <%= f.input :starts_date, label: "Booking date ", input_html: { id: "start-date-input", class: "form-control", placeholder: "Dates you are looking for ", type: "text", data: { controller: "flatpickr" } } %>
    </div>
    <div class="col-md-3 maclassebut">
      <div id="date-difference"></div>
      <%= f.button :submit, "Search", class: "monbutton" %>
    </div>
    <%= f.input :ends_date, as: :hidden, input_html: { id: "end-date-input" } %>
  </div>

<% end %>
<h2 class = "now">Rental now</h2>
  </div>

</div>
